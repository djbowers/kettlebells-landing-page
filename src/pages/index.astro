// import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
// import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'BellSkill — Kettlebell Training App',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Sign up for free',
        href: 'https://app.bellskill.com',
      },
      // { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: 'src/assets/images/competition-bells.png',
      alt: 'BellSkill Hero Image',
    }}
  >
    <Fragment slot="title"> Focus on your workout,<br /> not counting reps. </Fragment>

    <Fragment slot="subtitle">
      BellSkill is a better way to get faster,<br /> more noticeable results from your kettlebell training.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What sets BellSkill apart..."
    subtitle="The first app built for autoregulated kettlebell programs."
    items={[
      {
        title: 'Workout Timers',
        description:
          'Optimize your training regimen with customizable rest and interval timers, allowing for structured and effective workouts.',
        icon: 'tabler:clock-hour-2',
      },
      {
        title: 'Various Weight Configurations',
        description:
          'Tailor your workouts to your fitness level and goals with the flexibility to choose from single bell, double bell, or bodyweight configurations.',
        icon: 'tabler:settings',
      },
      {
        title: 'Rep Ladders',
        description:
          'Challenge yourself and track your progress effortlessly with our rep ladder feature, enabling you to set and conquer new personal bests.',
        icon: 'tabler:ladder',
      },
      {
        title: 'Volume & Repetition Counter',
        description:
          'Keep tabs on your performance with our precise rep/volume counter, empowering you to monitor and improve your strength and endurance over time.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Repeat Workouts',
        description:
          'Gain valuable insights into your fitness journey by accessing your comprehensive workout history, allowing you to easily repeat your favorite or most effective workouts.',
        icon: 'tabler:repeat',
      },
      {
        title: 'Choose RPE',
        description:
          'Customize your workout intensity based on your individual fitness level and preferences by selecting your desired Rate of Perceived Exertion (RPE) for each session.',
        icon: 'tabler:color-picker',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside the app"
    title="BellSkill's Blueprint: Interval Timer meets Volume Tracker"
    items={[
      {
        title: 'Versatility',
        description:
          "Whether you're a beginner or seasoned athlete, our app caters to all fitness levels and preferences, offering diverse weight configurations and customizable settings to suit your needs.",
      },
      {
        title: 'Progress Tracking',
        description:
          'Monitor your performance and progress effortlessly with intuitive tracking tools, empowering you to set and achieve your fitness goals.',
      },
      {
        title: 'Adaptability',
        description:
          'Adjust your workout intensity on the fly with the flexibility to choose your Rate of Perceived Exertion (RPE), ensuring a challenging yet sustainable approach to fitness that aligns with your capabilities and goals.',
      },
    ]}
    image={{
      src: 'src/assets/images/man-holding-kettlebell-portrait.png',
      alt: 'Man Holding Kettlebell',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Bring your own movements</h3>
      Use one of many popular kettlebell programs, or go freestyle with variations of basic kettlebell movements.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

